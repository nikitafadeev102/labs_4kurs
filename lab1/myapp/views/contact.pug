    p Контактная информация

    // файл: views/todo.pug
extends layout

block content
  h1 Список задач
  form(action='/todo', method='POST')
    input(type='text', name='task', placeholder='Новая задача')
    button(type='submit') Добавить

  ul
    each task in tasks
      li
        | #{task.title}
        button(type='button', onclick=`deleteTask(${task.id})`) Удалить
        button(type='button', onclick=`markAsDone(${task.id})`) Выполнено

// файл: views/contact.pug
extends layout

block content
  h1 Обратная связь
  if message
    p.message #{message}
  form(action='/contact', method='POST')
    label(for='name') Имя:
    input(type='text', name='name', required)

    label(for='email') Email:
    input(type='email', name='email', required)

    label(for='subject') Тема сообщения:
    input(type='text', name='subject', required)

    label(for='message') Сообщение:
    textarea(name='message', required)

    div
      label Для какого типа запроса:
      input(type='radio', name='requestType', value='question', required) Вопрос
      input(type='radio', name='requestType', value='feedback') Отзыв
      input(type='radio', name='requestType', value='complaint') Жалоба

    input(type='checkbox', name='subscribe') Подписаться на рассылку

    button(type='submit') Отправить

