  // файл: views/blog.pug
extends layout

block content
  header
    h1 Название блога
    nav
      ul
        li: a(href='/') Главная
        li: a(href='/articles') Статьи
        li: a(href='/contact') Контакты

  main
    article
      h2 Заголовок статьи
      p Дата публикации: 01.01.2023
      p Текст статьи...

  aside
    h3 Последние статьи
    ul
      li: a(href='/articles/post1') Заголовок статьи 1
      li: a(href='/articles/post2') Заголовок статьи 2

